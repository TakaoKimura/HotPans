<%= form_for @bread_store, html: { class: "bread_store_form", id: "bread_store_form", role:"form" }  do |f| %>
<% if @bread_store.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@bread_store.errors.count, "error") %> でパン屋が作成できなかった:</h2>

	<ul>
		<% @bread_store.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name, "パン屋名"%>
	<div class="col-sm-10">
		<%= f.text_field :name, class: "form-control" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :phone_number, "電話番号"%>
	<div class="col-sm-10">
		<%= f.text_field :phone_number, class: "form-control" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :address, "住所" %>
	<div class="col-sm-10">
		<%= f.text_field :address, class: "form-control"  %>
	</div>
</div>

<div class="form-group">
	<%= f.submit getButtonNameByAction(), class: "btn btn-default"%>
</div>

<% end %>