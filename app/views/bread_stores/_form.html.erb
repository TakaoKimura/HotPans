<%= form_for(@bread_store) do |f| %>
  <% if @bread_store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bread_store.errors.count, "error") %> でパン屋が作成できなかった:</h2>

      <ul>
      <% @bread_store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "パン屋名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone_number, "電話番号" %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit getButtonNameByAction()%>
  </div>
<% end %>
