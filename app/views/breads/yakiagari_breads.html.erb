<% if @yakiagari_breads.empty? %>
<div class="jumbotron">
	現在、焼き上がりパンがありません。
</div>
<% else %>
<h1>焼き上がりパン</h1>
<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr class="success">
			<th>パン屋名</th>
			<th>パン屋住所</th>
			<th>パン名</th>
		</tr>
	</thead>
	<tbody>
		<% @yakiagari_breads.each do |bread| %>
		<% if bread.bread_store.nil? %>
		<% next %>
		<% end %>
		<tr class="active">
			<td><%= bread.bread_store.name %></td>
			<td><%= bread.bread_store.address%></td>
			<td><%= bread.name %></td>
		</tr>
		<%end %>
	</tbody>
</table>
<% end %>
<div id='content'>
	<div id='basic-modal'>
		basic model 
	</div>

	<!-- modal content -->
	<div id="basic-modal-content">
		start<br>
		content here<br>
		end<br>
	</div>
</div>
