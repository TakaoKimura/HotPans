<%= form_for :bread, url: getFormActionURL(current_view), method: :post, html: { action: "confirm", class: "bs-example form-horizontal col-lg-6", id: "bread_form", role: "form" } do |f| %>
<fieldset>
<legend><%= getFormLegendByAction() %></legend>
<div class="form-group">
  <%= f.label :name, "パン名", class: "col-lg-2 control-label" %><br>
  <div class="col-lg-10">
    <%= f.text_field :name, class: "form-control" %>
    <% if (!@bread.errors.get(:name) || @bread.errors.get(:name).length > 0) %>
      <label class="text-danger">パン名を２文字以上sdfsdf入力してください。</label>
    <% end %>
  </div>
</div>
<div class="form-group">
  <%= f.label :name, "タイプ", class: "col-lg-2 control-label" %><br>
  <div class="col-lg-10">
    <%= f.text_field :kind, class: "form-control"%>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
    <%= button_tag "リセット", type: :reset, class: "btn btn-default" %>
    <%= f.submit getButtonNameByAction(), class: "btn btn-primary" %>
  </div>
</div>
<fieldset>
<% end %>
<div class="float-clear"></div>
