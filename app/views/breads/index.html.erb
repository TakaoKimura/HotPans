<% if @bread_store.nil? %>
  <h2>Currently no bread store</h2>
  <%= link_to "Create new bread store", new_bread_store_path %>
<% elsif @breads.empty? %>
   <h2>Currently no breads</h2>
   <%= link_to "Create new bread", new_bread_path %>
<% else %>

<h1>パンリスト</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="success">
      <th>パン名</th>
      <th>種類</th>
      <th>表示</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @breads.each do |bread| %>
      <tr class="active">
        <td><%= bread.name %></td>
        <td><%= bread.kind %></td>
        <td><%= link_to '表示', bread %></td>
        <td><%= link_to '編集', edit_bread_path(bread) %></td>
        <td><%= link_to '削除', bread, method: :delete, data: { confirm: 'パンの情報を削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいパンを追加する', new_bread_path %>
<% end %>
